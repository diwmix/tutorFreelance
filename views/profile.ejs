<html>
    <head>
        <%- include('./metas/profileMeta.ejs', {title: 'Profile'}) %>
    </head>
    <body>
        <div class="container">
            <div class="user-info">
                <div class="user-info_logo">
                    <img src='uploads/<%= avatar %>'  alt="a">
                    <label class="user-info_logo-change">
                        <svg class="user-info_logo-change_svg" stroke="black" fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                        <form id="registration-form" action="/profile" method="POST" enctype="multipart/form-data">
                            <input type="file" accept=".jpg, .jpeg, .png, .webp" name="file">
                            <input value="submit" type="submit">
                        </form>
                    </label>
                </div>
                <div class="user-info_text">
                    <p class="user-info_id">ID: <%= id %></p>
                    <p class="user-info_name"><%= name.toUpperCase() %></p>
                    <div class="bio">
                        <div class="bio_change-button"></div>
                        <p><%= bio %></p>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
